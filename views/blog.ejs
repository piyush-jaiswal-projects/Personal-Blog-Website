    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">


<!-- Adding Stylesheet -->
    <link rel="stylesheet" href="/css/homeStyles.css">

<!-- Importing Bootstrap -->
<link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sign-in/">
    <!-- Bootstrap core CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


    <title>Piyush Jaiswal</title>
</head>
<body>
    <header>
        <h1 class="websiteHeadingPart1"> Piyush </h1>
        <h1 class="websiteHeadingPart2"> Jaiswal </h1>

        <div class="navigationBar">
         <a href="/" class="navLink"> Home </a>
         <a href="/blog" class="navLink"> Blog </a>
         <a href="/bookNotes" class="navLink"> Book Notes </a>
         <a href="/newsletter" class="navLink"> Newsletter </a>
         <a href="https://open.spotify.com/show/3X2LMzK07AOwG4N8zXh1A1?si=KXvNa11sR-eC-vG33104fg&dl_branch=1" class="navLink" target="_blank"> Podcast </a>
         <a href="/about" class="navLink"> About Me </a>
         <a href="/contact" class="navLink"> Contact </a>

        </div>
        <hr class="divider">
    </header>

    <div class="blogLandingpage">
        <img src="/images/blog.png" class="blogImage blogBG">
        <h6 class="customBlogTitle introduction">I write articles on productivity, careers and stuff I find interesting. I hope you find it valuable.</h6>
    </div>


    <!-- sample content -->
    <div class="blogContent">
        <h2 class="blogContentTitle"> Title of blog</h2>
        <p class="blogContentPara"> <%= startingContent.substring(0, 200) + "..." %> </p>
    </div>


    <% posts.forEach(function(post){ %>
        <div class="blogContent">
            <h2 class="blogContentTitle"> <%= post.title %></h2>
            <p class="blogContentPara"> <%= post.content.substring(0, 200) + "..." %> <a href="/blog/<%= post._id %>">Read more</a> </p>
            
        </div>
    <%    });    %>

    <footer class="footer blogFooterClass" id="foot">
        <h3 class="footerText blogFooterText">Piyush Jaiswal &#169; 2021 </h3>
        <h5 class="footerText footerPara blogFooterPara">
       Shoot me an email at: 
       <br>
       piyushjaiswalofficial001@gmail.com            </h5>

        <div class="socialLinks"> 
            <a href="https://www.instagram.com/_piyush.jaiswal/" target="_blank"><img src="images/ig.png" class="socialicons"></a>
            <a href="https://www.linkedin.com/in/piyush-jaiswal-156405203/" target="_blank"><img src="images/li.png" class="socialicons"></a>
            <a href="https://www.youtube.com/channel/UCxWTY6UOc_3cDLpEb0xqvpg" target="_blank"><img src="images/yt.png" class="socialicons"></a>
            <a href="https://twitter.com/PiyushJ17317768" target="_blank"><img src="images/tw.png" class="socialicons"></a>

        </div>
    </footer>
</body>
</html>    